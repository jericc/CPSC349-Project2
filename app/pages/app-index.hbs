<div class="drawer drawer-mobile">
  <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
  <div class="drawer-content flex flex-col items-center justify-center bg-green-100">
    <!-- Page content here -->
    {{!-- OPEN MENU DRAWER BUTTON --}}
    <div class="lg:hidden h-12 mt-20">
      <label for="my-drawer-2" data-mdb-ripple="true" data-mdb-ripple-color="light"
        class="inline-block px-6 py-2.5 bg-amber-400 text-black font-bold text-base leading-tight uppercase rounded shadow-md hover:bg-red-700 hover:shadow-lg focus:bg-red-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-red-800 active:shadow-lg transition duration-150 ease-in-out">Menu</label>
    </div>
    {{!-- FLEX CONTAINER WRAPPER --}}
    <main class="flex flex-wrap justify-between lg:justify-around h-full w-auto m-1">
      {{!-- FLEX BOX 1 CONTAINER: DIARY ENTRIES--}}
      <div class="flex flex-col items-center min-h-min content-center xl:w-3/5 bg-green-100" array key="diaries" sortable>
        {{#for diary in diaries}}
            <div class="diary-entry scrollbar" object key:label="@search" key:text="@search" edit:label edit:text>
                <h2 class="text-white font-bold text-xl mb-5" target:label="@innerText">{{default diary.label "Date"}}</h2>
                <p target:text="@innerText">
                    {{default diary.text "Lorem ipsum dolor sit amet, consectetur adipiscing elit,
                    sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."}}
                </p>
            </div>
        {{/for}}
      </div>
      {{!-- FLEX BOX 2: TO DO & SPECIAL EVENTS--}}
      <div class="flex flex-col items-center min-h-min content-center xl:w-2/5 bg-green-100  ">

        <div class="card card-container min-w-96 scrollbar">
          <figure><img src="https://placeimg.com/1280/720/nature" alt="Shoes" /></figure>
          <div object class="card-body">
            <h2 class="card-title">To Do List</h2>
            <ul array key="todos" sortable class="list-disc">
              {{#for todo in todos}}
              <li object key:text="@innerText" edit:text>{{default todo.text "New item"}}</li>
              {{/for}}
            </ul>
            <div class="card-actions justify-start">
              <button new:todo class="btn btn-primary">Add Item</button>
            </div>
          </div>
        </div>

        <div class="card card-container min-w-96 scrollbar">
          <figure><img src="https://placeimg.com/1280/720/people" alt="Shoes" /></figure>
          <div object class="card-body">
            <h2 class="card-title">Special Events</h2>
            <ul array key="events" sortable class="list-disc">
              {{#for event in events}}
              <li object key:text="@innerText" edit:text>{{default event.text "New item"}}</li>
              {{/for}}
            </ul>
            <div class="card-actions justify-start">
              <button new:event class="btn btn-primary">Add Item</button>
            </div>
          </div>
        </div>

      </div>
    </main>
    {{!-- Page content end here --}}
  </div>
